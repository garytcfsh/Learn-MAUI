<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp4.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp4"
    xmlns:views="clr-namespace:MauiApp4.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="MauiApp4">

    <ShellContent
        Title="Count"
        ContentTemplate="{DataTemplate views:CountPage}"
        Route="MainPage" />

    <ShellContent
        Title="Test"
        ContentTemplate="{DataTemplate views:TestPage}"
        Route="TestPage" />

    <ShellContent
        Title="Count Fancy"
        ContentTemplate="{DataTemplate views:CountFancyPage}"
        Route="FancyPage" />

    <ShellContent
        Title="People"
        ContentTemplate="{DataTemplate views:PeoplePage}"
        Route="PeoplePage" />
</Shell>
