<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp4.Views.CountPage"
             xmlns:viewModels="clr-namespace:MauiApp4.ViewModels"
             Title="MainPage"
             x:DataType="viewModels:CountViewModel">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="{OnPlatform 'dotnet_bot.png', Android='booster_notify_h.png'}"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

            <HorizontalStackLayout
                Spacing="10">
                <Label
                    Text="No Data Binding:"
                    Style="{StaticResource SubHeadline}"
                    />
                <Label
                    x:Name="NoDataBindingLabel"
                    Style="{StaticResource SubHeadline}"
                    TextColor="Red"
                    />
            </HorizontalStackLayout>

            <HorizontalStackLayout
                Spacing="10">
                <Label
                    Text="Data Binding:"
                    Style="{StaticResource SubHeadline}"
                    />
                <Label
                    Text="{Binding Msg}"
                    Style="{StaticResource SubHeadline}"
                    TextColor="Red"
                    />
            </HorizontalStackLayout>

            <HorizontalStackLayout
                Spacing="10">
                <Label
                    Text="Data Binding Property Changed:"
                    Style="{StaticResource SubHeadline}"
                    />
                <Label
                    Text="{Binding Msg1}"
                    Style="{StaticResource SubHeadline}"
                    TextColor="Red"
                    />
            </HorizontalStackLayout>

            <Button
                Text="Click me" 
                Command="{Binding AddCountCommand}"
                SemanticProperties.Hint="Counts the number of times you click"
                HorizontalOptions="Fill" />

            <Button
                Text="Click me Add 10" 
                Command="{Binding AddCountMultipleTimesCommand}"
                CommandParameter="10"
                SemanticProperties.Hint="Counts the number of times you click"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>